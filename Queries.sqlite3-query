-- Selcects the car id and car name from cars
SELECT CarID, CarName FROM Cars;

SELECT * FROM Cars
JOIN Manufacturer ON Manufacturer.ManufacturerID = Cars.ManufacturerID; 

SELECT Cars.CarID, Manufacturer.Name, Cars.CarName, Cars.ImgURL FROM Cars
JOIN Manufacturer ON Manufacturer.ManufacturerID = Cars.ManufacturerID; 

SELECT * FROM Cars JOIN Manufacturer 
ON Manufacturer.ManufacturerID = Cars.ManufacturerID
WHERE Cars.CarID = 1; 
